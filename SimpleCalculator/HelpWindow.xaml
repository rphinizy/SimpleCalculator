<Window x:Class="SimpleCalculator.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCalculator"
        mc:Ignorable="d"
        Title="HelpWindow" Height="300" Width="250">
    
    <Grid>
        
        <StackPanel>
            
            <Label
            HorizontalAlignment="Center"
            Margin="20"
            FontStyle="Italic"
            Foreground="DarkRed"
            FontWeight="Bold"
            FontSize="16"
            Content="Help Menu"/>
            
            <TextBlock
            Text="a) select calculation type"
            Margin="10"
            FontSize="16"/>
            <TextBlock
            Text="b) press calculate button."
            Margin="10"
            FontSize="16"/>
            
            <TextBlock
            Text="c) buy a real calculator."
            Margin="10"
            FontSize="16"/>
          
            <Button
            x:Name="Button_ExitButton"
            Content="Exit"
            Width="75" 
            Height="30"
            Margin="25"
            Background="Green"
            Foreground="Yellow"
            Click="Button_ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
